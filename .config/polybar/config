[colors]
background = #2a373e
background-alt = #dd0f0f0f
foreground = #fff
foreground-alt = #fff
primary = #ffb52a
secondary = #e60053
alert = #bd2c40
; THESE COLORS ARE CHANGED WITH chtheme
COLOR1 = #cf3704
COLOR2 = #161616
COLOR3 = #000000
; ;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;

; Made to look like i3status while keeping the costumization that polybar offers
[bar/bspwm_version_primary]
monitor = DP-4
width = 100%
height = 14
radius = 0.0
fixed-center = false

background = ${colors.COLOR3}
foreground = #fff

line-size = 2
line-color = #f00

border-size = 0
border-color = #000

padding-left = 0
padding-right = 1

module-margin-left = 0
module-margin-right = 0

font-0 = Monospace:size=8.3;1
font-1 = WeatherIcons:size=9;1
font-2 = MaterialIcons:size=10;1
font-3 = NotoColorEmoji:fontformat=truetype:scale=13.5;0

modules-left = bspwm xwindow
modules-center =
modules-right = crypto sep update sep disk hor-sep cpu hor-sep memory sep battery_level sep date tray

wm-restack = bspwm
override-redirect = true
cursor-click = pointer
cursor-scroll = ns-resize

# Currently the same as primary
[bar/bspwm_version_secondary]
monitor = HDMI-0
width = 100%
height = 14
radius = 0.0
fixed-center = false

background = ${colors.COLOR3}
foreground = #fff

line-size = 2
line-color = #f00

