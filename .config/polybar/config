module-margin-right = 0

font-0 = Monospace:size=8.3;1
font-1 = WeatherIcons:size=9;1
font-2 = MaterialIcons:size=10;1
font-3 = NotoColorEmoji:fontformat=truetype:scale=13.5;0

modules-left = bspwm xwindow
modules-center =
modules-right = crypto sep update sep disk hor-sep cpu hor-sep memory sep battery_level sep date

tray-position = right
tray-padding = 1
wm-restack = bspwm
override-redirect = true
cursor-click = pointer
cursor-scroll = ns-resize

;;;; MODULES

[module/tray]
type = internal/tray
format-margin = 0 px
tray-spacing = 0 px

[module/xwindow]
type = internal/xwindow
label = " %title:0:120:...% "
format-underline = ${background}
format-background = ${colors.COLOR2}
format-padding =

[module/bspwm]
type = internal/bspwm
pin-workspaces = true

label-focused = " %name% "
label-focused-background = ${colors.COLOR1}
label-focused-padding = 0

label-occupied = " %name% "
label-occupied-background = ${colors.COLOR2}
label-occupied-foreground = #888
label-occupied-padding = 0

label-urgent = " %name% "
label-urgent-background = ${colors.alert}
label-urgent-padding = 0

label-empty =
label-empty-foreground = #888
label-empty-padding = 1

[module/brightness]
type = custom/script
exec = echo "$(($(brightnessctl g) * 100 / $(brightnessctl m)))"
label = %output%
format = BL <label>

[module/date]
type = internal/date
interval = 10
date = "%A, %b %d"
time = "%H:%M"
label = "ðŸ’» %date% %time%"

[module/update]
type = custom/script
exec = (checkupdates; paru -Qua) | wc -l
label = "%output% ðŸ“¦"
click-right = $TERMINAL paru &
interval = 60

[module/battery_level]
type = custom/script
exec = $HOME/.config/polybar/get-battery emoji
label = "%output%"
interval = 10

[module/disk]
type = custom/script
exec = printf "%siB" $(df -H /dev/nvme1n1p2 --output=avail | sed -n '2p' | cut -c 2-)
label = "%output%"
click-right = $TERMINAL -e htop &
interval = 300

[module/cpu]
type = custom/script
exec = top -bn1 | grep "Cpu(s)" | sed "s/.*, *\([0-9.]*\)%* id.*/\1/" | awk '{printf "CPU %2i%%\n", 100 - $1}'
label = "%output%"
click-right = $TERMINAL -e htop &
interval = 5

[module/memory]
type = custom/script
exec = free -h | awk '/Mem:/ {print $3 "B/" $2 "B"}'
label = "%output% ðŸ’¾"
click-right = $TERMINAL -e htop &
interval = 30

[module/crypto]
type = custom/script
exec = echo "ðŸ“ˆ"
click-left = dunstify --timeout=15000 "ðŸ’° Crypto Prices ðŸ’°" "\n$(~/bin/check-prices)"
click-right = $TERMINAL -e cointop &
interval = 1000000

[module/sep]
type = custom/script
exec = echo -n " â”‚ "
format-foreground = #888
interval = 1000000

[module/hor-sep]
type = custom/script
exec = echo -n " - "
format-foreground = #888
interval = 1000000

[settings]
screenchange-reload = true

[global/wm]
margin-top = 5
margin-bottom = 5

