#!/usr/bin/env zsh

if [[ $1 == "l" ]]; then
  session="$(zellij ls -s -n | fzf)"
  zellij \
    -l project \
    attach \
    $session
  exit 0
fi

if [[ $# -ne 0 ]]; then
  echo "z. Fuzzy search and launch a Zellij terminal workspace for a project.\n"
  echo "OTHER OPTIONS:"
  echo "  l            Lists all existing sessions, attaches when selecting"
  exit 0
fi

dirs=(${(f)~"$(<$HOME/.project-dirs)"})
dir="$(fd \
  --unrestricted \
  --absolute-path \
  --type d \
  --color=always \
  --min-depth 1 \
  --max-depth 1 \
  --exclude .git \
  . "${dirs[@]}" \
  | sed "s|${HOME}|~|" \
  | fzf \
)"

adjectives=(
    "adamant"
    "adept"
    "adventurous"
    "arcadian"
    "auspicious"
    "awesome"
    "blossoming"
    "brave"
    "charming"
    "chatty"
    "circular"
    "considerate"
    "cubic"
    "curious"
    "delighted"
    "didactic"
    "diligent"
    "effulgent"
    "erudite"
    "excellent"
    "exquisite"
    "fabulous"
    "fascinating"
    "friendly"
    "glowing"
    "gracious"
    "gregarious"
    "hopeful"
    "implacable"
    "inventive"
    "joyous"
    "judicious"
    "jumping"
    "kind"
    "likable"
    "loyal"
    "lucky"
    "marvellous"
    "mellifluous"
    "nautical"
    "oblong"
    "outstanding"
    "polished"
    "polite"
    "profound"
    "quadratic"
    "quiet"
    "rectangular"
    "remarkable"
    "rusty"
    "sensible"
    "sincere"
    "sparkling"
    "splendid"
    "stellar"
    "tenacious"
    "tremendous"
    "triangular"
    "undulating"
    "unflappable"
    "unique"
    "verdant"
    "vitreous"
    "wise"
    "zippy"
)

nouns=(
    "aardvark"
    "accordion"
    "apple"
    "apricot"
    "bee"
    "brachiosaur"
    "cactus"
    "capsicum"
    "clarinet"
    "cowbell"
    "crab"
    "cuckoo"
    "cymbal"
    "diplodocus"
    "donkey"
    "drum"
    "duck"
    "echidna"
    "elephant"
    "foxglove"
    "galaxy"
    "glockenspiel"
    "goose"
    "hill"
    "horse"
    "iguanadon"
    "jellyfish"
    "kangaroo"
    "lake"
    "lemon"
    "lemur"
    "magpie"
    "megalodon"
    "mountain"
    "mouse"
    "muskrat"
    "newt"
    "oboe"
    "ocelot"
    "orange"
    "panda"
    "peach"
    "pepper"
    "petunia"
    "pheasant"
    "piano"
    "pigeon"
    "platypus"
    "quasar"
    "rhinoceros"
    "river"
    "rustacean"
    "salamander"
    "sitar"
    "stegosaurus"
    "tambourine"
    "tiger"
    "tomato"
    "triceratops"
    "ukulele"
    "viola"
    "weasel"
    "xylophone"
    "yak"
    "zebra"
)

if [[ -n $dir ]]; then
  cd $~dir
  zellij \
    -l project \
    attach \
    -c "$(basename $dir)-${adjectives[$RANDOM % ${#adjectives[@]}]}-${nouns[$RANDOM % ${#nouns[@]}]}"
fi
