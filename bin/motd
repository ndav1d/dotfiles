#!/usr/bin/env bash

last_log() {
  last --time-format=full -2 ${$(tty)##*/} | sed -n 2p | awk 'BEGIN{FS=" "} {printf "\033[32m  Welcome back Nuno! Last login (on %s): %s %s %s %s %s\n",$2,$1,$3,$4,$5,$6}'
}

C='\e[0m' #clear
R='\e[38;5;01m'
Y='\e[38;5;03m'
W='\e[38;5;11m'

last_log
echo -e '                       '$R'     (    , )       (.   )  (   '\'',    )    (      '$C
echo -e '   ______________      '$R'      .'\'' ) ( . )    ,  ( ,     )   ( .    .'\'' ) )  '$C
echo -e '  ||            ||     '$R'   ). , ( .   (  ) ( , '\'')  .'\'' (  ,    )     Â´ (  )'$C
echo -e '  ||            ||     '$R'  (_)  . ), ) _) _,'\'')  (, ) '\''. )  ,. ('\'' )  . )_) _'$C
echo -e '  ||            ||     '$R'  @@@  @@@  @@@@@@@    @@@@@@   @@@  @@@  @@@@@@@ '$C
echo -e '  ||            ||     '$R'  @@@@ @@@  @@@@@@@@  @@@@@@@@  @@@  @@@  @@@@@@@@'$C
echo -e '  ||____________||       '$R'@@'$Y'!'$R'@'$Y'!'$R'@@@  @@'$Y'!'$R'  @@'$Y'!'$R'  @@@  @@'$Y'!'$R'  @@@  @@'$Y'!'$R'  @@'$Y'!'$R'  @@@'$C
echo -e '  |______________|       '$Y'!'$R'@'$Y'!!'$R'@'$Y'!'$R'@'$Y'!  !'$R'@'$Y'!'$R'  @'$Y'!'$R'@  '$Y'!'$R'@'$Y'!'$R'  @'$Y'!'$R'@  '$Y'!'$R'@'$Y'!'$R'  @'$Y'!'$R'@  !'$R'@'$Y'!'$R'  @'$Y'!'$R'@'$C
echo -e '   \\\\############\\\\      '$R'@'$Y'!'$R'@ '$Y'!!'$R'@'$Y'!'$R'  @'$Y'!'$R'@  '$Y'!'$R'@'$Y'!'$R'  @'$Y'!'$R'@'$Y'!'$R'@'$Y'!'$R'@'$Y'!'$R'  @'$Y'!'$R'@  '$Y'!'$R'@'$Y'!  @'$Y'!'$R'@  '$Y'!'$R'@'$Y'!'$C
echo -e '    \\\\############\\\\     '$W':'$Y'!'$W':  '$Y'!'$W':'$Y'!'$W'  :'$Y'!'$W':  '$Y'!'$W':'$Y'!'$W'  :'$Y'!'$W':  '$Y'!'$W':'$Y'!'$W'   ::'$Y'!!'$W':'$Y'!'$W'   :'$Y'!'$W':  '$Y'!'$W':'$Y'!'$C
echo -e '     \\      ____    \\     '$W'::   ::   :::: ::  ::   :::    ::::     :::: ::'$C
echo -e '      \\_____\\___\\____\\   '$W'::    :   :: :  :    :   : :     :      :: :  : '$C'\n'
